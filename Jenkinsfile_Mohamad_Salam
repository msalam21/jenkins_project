pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
        PYTHONPATH = "${env.WORKSPACE}"
    }

    stages {
        stage('Setup') {
            steps {
                script {
                    if (!fileExists("${env.WORKSPACE}\\${VIRTUAL_ENV}")) {
                        bat "python -m venv ${VIRTUAL_ENV}"
                    }
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && pip install -r requirements.txt"
                }
            }
        }

        stage('Lint') {
            steps {
                script {
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && flake8 app.py"
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && coverage run -m pytest"
                }
            }
        }

        stage('Coverage') {
            steps {
                script {
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && coverage report && coverage html"
                    echo "Code coverage report generated in HTML format."
                }
            }
        }

        stage('Security Scan') {
            steps {
                script {
                    bat "set PYTHONIOENCODING=utf-8 && ${VIRTUAL_ENV}\\Scripts\\activate && bandit -r . -f json -o bandit_report.json || exit 0"
                }
            }
        }


        stage('Deploy') {
            steps {
                script {
                    echo "Starting local deployment..."
                    echo "Setting up virtual environment..."
                    bat 'venv\\Scripts\\activate && python app.py'
                    echo "Application is running locally."
                }
            }
        }


    }

    post {
        always {
            cleanWs()
        }
    }
}
