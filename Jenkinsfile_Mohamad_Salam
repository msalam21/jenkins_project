pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
        PYTHONPATH = "${env.WORKSPACE}"
    }

    stages {
        stage('Setup') {
            steps {
                script {
                    def pythonPath = 'C:\\Python312\\python.exe'  // Update this to the path of Python 3.7 or newer
                    bat "${pythonPath} -m venv ${VIRTUAL_ENV}"
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && ${pythonPath} -m pip install -r requirements.txt"
                }
            }
        }


        stage('Lint') {
            steps {
                script {
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && flake8 app.py"
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && coverage run -m pytest"
                }
            }
        }

        stage('Coverage') {
            steps {
                script {
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && coverage report && coverage html"
                    echo "Code coverage report generated in HTML format."
                }
            }
        }

        stage('Security Scan') {
            steps {
                script {
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && bandit -r ."
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo "Deploying application..."
                    // Add any deployment steps if required
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
